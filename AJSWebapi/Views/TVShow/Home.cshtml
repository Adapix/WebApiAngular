@using System.Web.Optimization

<div id="dv-container" ng-app="dbopModule" ng-controller="DbopController">
    <div id="dv-form">
        <table id="tbl-dbop">
            <tr>
                <td>
                    <span>Id</span>
                </td>
                <td>
                    <input type="text" id="tsid" readonly="readonly" ng-model="Id" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Nom</span>
                </td>
                <td>
                    <input type="text" id="tsname" required ng-model="Name" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Année</span>
                </td>
                <td>
                    <input type="text" id="tsyear" required ng-model="Year" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Acteurs principaux</span>
                </td>
                <td>
                    <input type="text" id="tsactors" required ng-model="Actors" />
                </td>
            </tr>
        </table>
    </div>
    <div id="dv-buttons">
        <input type="button" id="new" value="Nouveau" ng-click="clear()" />
        <input type="button" id="save" value="Enregistrer" ng-click="save()" />
        <input type="button" id="delete" value="Supprimer" ng-click="delete()" />
    </div>
    <div id="dv-msg">{{Message}}</div>
    <div id="dv-results">
        <table id="tbl-results">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Année</th>
                    <th>Acteurs principaux</th>
                </tr>
            </thead>
            <tbody ng-repeat="Ts in TvShows">
                <tr ng-click="get(Ts)">
                    <td> <span>{{Ts.Id}}</span></td>
                    <td> <span>{{Ts.Name}}</span></td>
                    <td> <span>{{Ts.Year}}</span></td>
                    <td> <span>{{Ts.Actors}}</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/angular")
@Scripts.Render("~/bundles/module")
@Scripts.Render("~/bundles/service")
@Scripts.Render("~/bundles/controller")
@Styles.Render("~/Content/css/Home")